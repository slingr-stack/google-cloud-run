{
    "name": "googlecloudrun",
    "label": "Google Cloud Run Package",
    "dependencies": [
        {
            "type": "service",
            "name": "http",
            "version": "v1.6.7",
            "instanceId": "shared"
        }
    ],
    "configuration": [
        {
            "name": "serviceAccountEmail",
            "label": "Service Account Email",
            "description": "The email from service account created",
            "type": "text",
            "required": true
        },
        {
            "name": "privateKey",
            "label": "Private Key",
            "description": "The private key associated to the service account",
            "type": "password",
            "required": true
        }
        ,{
            "name": "GOOGLECLOUDRUN_API_BASE_URL",
            "label": "Google Cloud Run Api Url",
            "type": "label",
            "value": "https://run.googleapis.com/v2"
        }
    ],
    "events": [
        {
            "label": "Webhook",
            "name": "webhook",
            "description": "Event triggered when there is a webhook coming from PandaDoc."
        }
    ],
    "metadata": [
        {
            "type": "script",
            "namespace": "api",
            "path": "/scripts/api.js"
        },
        {
            "type": "listener",
            "namespace": "webhook",
            "path": "/listeners/webhook.js"
        }
    ]
}
